# ─── App ──────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://postgres@localhost:5432/dates_db"

# ─── Auth (NextAuth v5) ────────────────────────────────────────────────────────
AUTH_SECRET="your-super-secret-key-min-32-chars-here"
# Optional: Add providers as needed
# AUTH_GOOGLE_ID=""
# AUTH_GOOGLE_SECRET=""

# ─── Redis (BullMQ) ───────────────────────────────────────────────────────────
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
# REDIS_PASSWORD=""

# ─── WhatsApp ─────────────────────────────────────────────────────────────────
# Opción A: Evolution API (self-hosted)
WHATSAPP_PROVIDER="evolution"            # "evolution" | "meta"
# URL donde corre Evolution (localhost si Evolution está en Docker y la app en el host)
EVOLUTION_API_URL="http://localhost:8080"
# Debe ser EL MISMO valor que AUTHENTICATION_API_KEY en el contenedor Evolution (docker-compose)
EVOLUTION_API_KEY="evolution_secret"
EVOLUTION_INSTANCE="dates-instance"

# Opción B: Meta Cloud API
# WHATSAPP_PROVIDER="meta"
# META_WHATSAPP_TOKEN="EAAxxxxxxx"
# META_PHONE_NUMBER_ID="10000000000"
# META_VERIFY_TOKEN="your-webhook-verify-token"

# ─── Reminder window ──────────────────────────────────────────────────────────
# Horas antes del turno para enviar recordatorio
REMINDER_HOURS_BEFORE="24"
